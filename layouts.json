{
  "chrome":
  {
    "tiles":
            [
              {
                "title": {
                  "static": "New"
                },
                "subtitle": {
                  "static": "Opens a new tab"
                },
                "background-color": {
                  "static": "#00FF00"
                },
                "active": {
                  "static": true
                },
                "iconUrl": {
                  "static": "new-tab.png"
                },
                "width": 2,
                "height": 1,
                "action": {
                  "sendKeyStroke": [
                    "Ctrl",
                    "T"
                  ]
                }
              },
              {
                "title": {
                  "static": "Reopen"
                },
                "subtitle": {
                  "static": "Reopens last closed tab"
                },
                "background-color": {
                  "static": "#00FF00"
                },
                "active": {
                  "stateVariable": "hasClosedTab"
                },
                "iconUrl": {
                  "static": "back-arrows.png"
                },
                "width": 2,
                "height": 1,
                "action": {
                  "sendKeyStroke": [
                    "Ctrl",
                    "Shift",
                    "T"
                  ]
                }
              },
              {
                "title": {
                  "static": "Google"
                },
                "subtitle": {
                  "static": "Open Google on the remote"
                },
                "background-color": {
                  "static": "#FFFFFF"
                },
                "active": {
                  "static": true
                },
                "iconUrl": {
                  "static": "google_logo.png"
                },
                "width": 2,
                "height": 1,
                "action": {
                  "remoteOpenUrl": {
                    "static": "http://www.google.ch"
                  }
                }
              },
              {
                "title": {
                  "static": "Mirror"
                },
                "subtitle": {
                  "static": "Open remote's current tab on this device"
                },
                "background-color": {
                  "static": "#0000FF"
                },
                "active": {
                  "static": true
                },
                "iconUrl": {
                  "static": "same-tab_white.png"
                },
                "width": 2,
                "height": 1,
                "action": {
                  "localOpenUrl": {
                    "stateVariable": "currentTabURL"
                  }
                }
              }
            ]
  }
}